{layout '../layout.latte'}
{varType App\Entities\Database\Object\SchoolroomObjectEntity[] $gridvalues}
{varType App\Enums\ActionConstructors\EBaseActionConstructor[] $actionConstructors}
{block content}
    <!-- Main content -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Třída</h3>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                <tr>
                    <th style="width: 20%">
                    </th>
                    <th style="width: 20%">
                        Jméno
                    </th>
                    <th style="width: 20%">
                    </th>
                </tr>
                </thead>
                <tbody>
                {foreach $gridvalues as  $gridValue}
                    <tr>
                        <td>
                            {$gridValue->getName()}
                        </td>
                        <td>
                            {$gridValue->g}
                        </td>
                        <td class="project-actions">
                            <a class="btn btn-info btn-sm"
                               href="{$actionConstructors[App\Enums\EControllerNames::SCHOOLROOM]::edit()}?id={$gridValue->getId()}">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Edit
                            </a>
                            <a class="btn btn-danger btn-sm"
                               href="{$actionConstructors[App\Enums\EControllerNames::SCHOOLROOM]::delete()}?id={$gridValue->getId()}">
                                <i class="fas fa-trash">
                                </i>
                                Delete
                            </a>
                        </td>
                    </tr>
                {/foreach}
                </tbody>
            </table>
        </div>
    </div>
{/block}